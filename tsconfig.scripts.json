{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/scripts",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "scripts/**/*.ts",
    "src/lib/exam-comparison-data.ts",
    "src/lib/exam-data.ts",
    "src/lib/mpsc-exam-data.ts",
    "src/lib/syllabus-data.ts",
    "src/lib/firebase-admin.ts"
  ],
  "exclude": ["node_modules"]
}
